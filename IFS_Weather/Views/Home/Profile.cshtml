@model IFS_Weather.Models.RegisterModel

@{
    ViewBag.Title = "Profile";
}
<!DOCTYPE html>
<html>
<head>

    <title></title>
    <style>

        body {
            background-image: url(../../assests/blur.png);
            background-size: cover;
            background-repeat: no-repeat;
            width: 100%;
        }

        #main {
            height: 600px;
            width: 1200px;
            background-image: url(../../assests/manzara.jpg);
            border-radius: 15px;
            margin: 30px auto auto auto;
            background-size: cover;
            background-repeat: no-repeat;
            border-color: black;
            border-width: 20px;
            justify-content: flex-end;
            align-items: flex-end;
            vertical-align: bottom
        }

        .header {
            height: 350px;
        }

        .weatherInfoHeader {
            height: 50px;
            padding-left: 5px;
            padding-top: 210px
        }

        .weatherinfo {
            height: 200px;
            width: 1200px;
            background-color: black;
            opacity: 0.5;
            border-radius: 0 0 15px 15px;
            flex-direction: row;
        }

        .profile-card {
            padding-top: 30px;
            width: 800px
        }

        .profile-info {
            width: 800px
        }
    </style>
</head>
<body>
    <div id="main">
        <div class="header">
            <center>
                <div class="profile-card">

                    <img src="~/assests/man.png" style="height:100px;width:100px;margin-bottom:30px" />


                    <table class="table">
                        <tr>
                            <th style="color:white">
                                Kullanıcı Adı
                            </th>
                            <th style="color:white">
                                @Model.Username
                            </th>
                        </tr>
                        <tr>
                            <th style="color:white">
                                Ad-Soyad
                            </th>
                            <th style="color:white">
                                @Model.Name
                            </th>

                        </tr>
                        <tr>
                            <th style="color:white">
                                Şehir
                            </th>
                            <th style="color:white">
                                @Model.DefaultCityName
                            </th>
                        </tr>
                    </table>
                </div>
                <a class="btn btn-default" href="#" style="color: darkviolet; align-items:flex-end" data-toggle="modal" data-target="#modalmanagement">Bilgileri güncelle</a>

            </center>


        </div>
        <div class="weatherInfoHeader">
            <a href="LogOut" style="color: white;margin-left: 20px;margin-right: 20px;text-decoration: none;float: right"><img src="~/assests/logout-red.png" style="height:20px;width:20px;" />Çıkış Yap</a>
            <a href="Profile" style="color:white;margin-left:20px;text-decoration:none;float:right"><img src="~/assests/man.png" style="height: 20px;width: 20px;" />Profil</a>
            <a href="Index" style="color: white; margin-left:20px;text-decoration:none;float:right"><img src="~/assests/home-blue.png" style="height: 20px; width: 20px;" />Ana Sayfa <span class="sr-only">(current)</span></a>
            @if (User.IsInRole("Yönetici"))
            {
                <a href="Admin" style="color: white; margin-left:20px;text-decoration:none;float:right"><img src="~/assests/settings.png" style="height: 20px; width: 20px;" />Yönetici Paneli <span class="sr-only"></span></a>}
        </div>
    </div>
    <div class="modal fade" style="margin-top:40px;" id="modalmanagement" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="background:url(../../assests/sky.jpg);background-size:cover;background-repeat:no-repeat;">
                <div class="modal-header">
                    <center>
                        <img src="~/images/avatar.png" style="border-radius:50%;z-index: 9;margin-top: -40px; width:100px; height:100px;" />

                    </center>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" style="color:black">&times;</span>
                    </button>
                    <center>
                        <h3 class="modal-title" style="margin-top:20px;color:black;font-weight:bold;justify-content:center;align-items:center">Bilgileri Güncelle</h3>
                    </center>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post))
                    {
                        <form>
                            <center>
                                <input type="text" style="border:none; width:100%" name="Name" placeholder="İsim" />
                                <br />
                                <input type="password" style="border:none;width:100%" name="Password" placeholder="Parola" />
                                <br />
                                <select name="DefaultCityName" class="btn btn-primary dropdown-toggle" style="width:280px;border-radius:15px;height:50px;background-color:#F1F1F1;color:gray" type="button">
                                    <option value="">Şehir Seçin</option>
                                    <option value="istanbul">İstanbul</option>
                                    <option value="izmir">İzmir</option>
                                    <option value="ankara">Ankara</option>
                                    <option value="sakarya">Sakarya</option>
                                </select>
                                <br />
                                <button style="align-items:flex-start;margin-top:5px" class="button" type="submit">Kaydet</button>
                                <br />
                            </center>
                        </form>}

                </div>
            </div>
        </div>
    </div>
</body>
</html>